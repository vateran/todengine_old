//-----------------------------------------------------------------------------
template <typename T>
Tuple3<T>::Tuple3():
x_(0), y_(0), z_(0)
{
    // empty
}


//-----------------------------------------------------------------------------
template <typename T>
Tuple3<T>::Tuple3(T x, T y, T z):
x_(x), y_(y), z_(z)
{
    // empty
}

//-----------------------------------------------------------------------------
template <typename T>
void Tuple3<T>::clear()
{
    x_ = y_ = z_ = 0;
}


//-----------------------------------------------------------------------------
template <typename T>
void Tuple3<T>::set(T x, T y, T z)
{
    x_ = x;
    y_ = y;
    z_ = z;
}
